{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Flask: Run server",
      "module": "flask",
      "env": {
        "FLASK_APP": "${input:flaskAppPath}",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--host=0.0.0.0",
        "--port=5000"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "jinja": true,
      "justMyCode": true,
      "autoStartBrowser": true
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Python: Run selected file",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Script: convertpptxtopdf.py",
      "program": "${workspaceFolder}/convertpptxtopdf.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "flaskAppPath",
      "description": "Select the Flask app entry point (value used for FLASK_APP).",
      "options": [
        "app.py",
        "CottageChooser/app.py"
        ]
    }
  ]
}